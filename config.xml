<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.dogefaucet.apps"
    versionCode = "3"
    version     = "1.3.0" >

  <name>DogecoinFaucet</name>

  <description>
      Claim Dogecoin every 4 minute's
  </description>

  <author href="https://facebook.com/ryan.hac" email="ryandevstudio@gmail.com">
      Ryan Aunur Rassyid
  </author>
  
  <preference name="permissions" value="none"/>
  <preference name="ShowSplashScreen" value="false" />
  <preference name="ShowSplashScreenSpinner" value="false" />
  <preference name="SplashScreenDelay" value="0"/>

  <!-- Plugins -->
  <plugin name="cordova-plugin-admobpro" spec="2.29.23" />
  <plugin name="cordova-plugin-whitelist" spec="1.3.2" />
  <plugin name="com.verso.cordova.clipboard" spec="0.1.0" />
  <plugin name="cordova-plugin-extension" source="npm" />
  <plugin name="cordova-plugin-device" source="npm"/>

  <!-- <plugin name="cordova-plugin-appavailability" source="npm" /> -->

  <access origin="*"/>

  <platform name="android">
      <preference name="android-minSdkVersion" value="19" /> <!-- Kitkat -->

      <icon density="ldpi" src="res/icons/android/ldpi.png"/>
      <icon density="mdpi" src="res/icons/android/mdpi.png"/>
      <icon density="hdpi" src="res/icons/android/hdpi.png"/>
      <icon density="xhdpi" src="res/icons/android/xhdpi.png"/>
      <icon density="xxhdpi" src="res/icons/android/xxhdpi.png"/>
      <icon density="xxxhdpi" src="res/icons/android/xxxhdpi.png"/>
  </platform>

  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />


</widget>